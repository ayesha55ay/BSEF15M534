#include<stdlib>
$!usr/bin/python
print (" welcome!! here we have FCFS sched in python! ")

proc= {}

a_time=[]

b_time=[]

for i in range (0,4):

num=input("Enter arrival time of the process")
	
if(i==0):
		
min=num	
	
elif(min>num):
		
min=num	
	
a_time.append(num)
	
num1=input("Enter CPU time of the process")
	
b_time.append(num1)
	
proc[i+1]=[a_time[i],b_time[i]]
	

print "Arrival.T"  ,"   " , "Burst.T"

for index in range (1,5):
	
print proc.get(index)[0] ,"       " , proc.get(index)[1]	

total=min
if(total>0):
	
print "0 ------", total , "idle time"

for index in range (1,5):
	
b_time=proc.get(index)[1]
	
total= total+b_time;
	
print min , "_______" ,total,  " P",index , " Completed "
min=total	
   
